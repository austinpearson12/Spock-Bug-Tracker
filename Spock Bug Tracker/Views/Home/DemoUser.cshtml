
@{
    Layout = null;
}

<!doctype html>
<html class="fixed">
<head>

    <!-- Basic -->
    <meta charset="UTF-8">

    <meta name="keywords" content="HTML5 Admin Template" />
    <meta name="description" content="Porto Admin - Responsive HTML5 Template">
    <meta name="author" content="okler.net">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <!-- Web Fonts  -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light" rel="stylesheet" type="text/css">

    <!-- Vendor CSS -->
    <link href="~/Style/bootstrap.css" rel="stylesheet" />
    <link href="~/Style/font-awesome.css" rel="stylesheet" />
    <link href="~/Style/magnific-popup.css" rel="stylesheet" />
    <link href="~/Style/datepicker3.css" rel="stylesheet" />

    <!-- Theme CSS -->
    <link href="~/Style/theme.css" rel="stylesheet" />

    <!-- Skin CSS -->
    <link href="~/Style/default.css" rel="stylesheet" />
    <!-- Theme Custom CSS -->
    <link href="~/Style/theme-custom.css" rel="stylesheet" />

    <!-- Head Libs -->
    <script src="~/Scripts/modernizr.js"></script>

</head>
<body>
    <!-- start: page -->
   

    <section class="body-sign">
        <div class="center-sign">
            <a href="/" class="logo pull-left">
                <img src="~/images/logo.png" height="54" alt="Porto Admin" />
            </a>

            <div class="panel panel-sign">
                <div class="panel-title-sign mt-xl text-right">
                    <h2 class="title text-uppercase text-bold m-none"><i class="fa fa-user mr-xs"></i>Demo Login</h2>
                </div>
                <div class="panel-body">
                    <div class="row">
                        @using (Html.BeginForm("DemoLoginAsync", "Account", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("DemoEmail", "DemoAdminEmail")
                            <div class="col-md-6">
                                <section class="panel">
                                    <header class="panel-heading bg-dark">
                                        <div class="panel-heading-icon bg-danger mt-sm">
                                            <i class="fa fa-eye"></i>
                                        </div>
                                    </header>
                                    <div class="panel-body">
                                        <h3 class="text-semibold mt-none text-center">Admin</h3>
                                        <p class="text-center">The Admin has full permissions across the full application.</p>
                                        <button type="submit" class="btn btn-xs btn-danger center-block">Login</button>
                                    </div>
                                </section>
                            </div>
                        }

                        @using (Html.BeginForm("DemoLoginAsync", "Account", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("DemoEmail", "DemoProjectManagerEmail")
                            <div class="col-md-6">
                                <section class="panel">
                                    <header class="panel-heading bg-dark">
                                        <div class="panel-heading-icon bg-danger mt-sm">
                                            <i class="fa fa-group"></i>
                                        </div>
                                    </header>
                                    <div class="panel-body">
                                        <h3 class="text-semibold mt-none text-center">Project Manager</h3>
                                        <p class="text-center">The Project Manager has </p>
                                        <button type="submit" class="btn btn-xs btn-danger center-block">Login</button>
                                    </div>
                                </section>
                            </div>
                        }
                        </div>

                    <div class="row">
                        @using (Html.BeginForm("DemoLoginAsync", "Account", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("DemoEmail", "DemoDeveloperEmail")
                            <div class="col-md-6">
                                <section class="panel">
                                    <header class="panel-heading bg-dark">
                                        <div class="panel-heading-icon bg-danger mt-sm">
                                            <i class="fa fa-code"></i>
                                        </div>
                                    </header>
                                    <div class="panel-body">
                                        <h3 class="text-semibold mt-none text-center">Developer</h3>
                                        <p class="text-center">Insert Text about role</p>
                                        <button type="submit" class="btn btn-xs btn-danger center-block">Login</button>
                                    </div>
                                </section>
                            </div>
                        }

                        @using (Html.BeginForm("DemoLoginAsync", "Account", FormMethod.Post))
                        {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("DemoEmail", "DemoSubmitterEmail")
                        <div class="col-md-6">
                            <section class="panel">
                                <header class="panel-heading bg-dark">
                                    <div class="panel-heading-icon bg-danger mt-sm">
                                        <i class="fa fa-envelope"></i>
                                    </div>
                                </header>
                                <div class="panel-body">
                                    <h3 class="text-semibold mt-none text-center">Submitter</h3>
                                    <p class="text-center">Insert Text about role</p>
                                    <button type="submit" class="btn btn-xs btn-danger center-block">Login</button>
                                </div>
                            </section>
                        </div>
                        }
                    </div>

                </div>
            </div>
        </div>
    </section>





                    


                    <!-- end: page -->
                    <!-- Vendor -->
                    <script src="~/Scripts/jquery.js"></script>
                    <script src="~/Scripts/jquery.browser.mobile.js"></script>
                    <script src="~/Scripts/bootstrap.js"></script>
                    <script src="~/Scripts/nanoscroller.js"></script>
                    <script src="~/Scripts/bootstrap-datepicker.js"></script>
                    <script src="~/Scripts/magnific-popup.js"></script>
                    <script src="~/Scripts/jquery.placeholder.js"></script>

                    <!-- Theme Base, Components and Settings -->
                    <script src="~/Scripts/theme.js"></script>

                    <!-- Theme Custom -->
                    <script src="~/Scripts/theme.custom.js"></script>

                    <!-- Theme Initialization Files -->
                    <script src="~/Scripts/theme.init.js"></script>

</body>
</html>




